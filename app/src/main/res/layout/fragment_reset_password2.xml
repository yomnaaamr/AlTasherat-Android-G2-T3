<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    tools:context=".features.authentication.reset_password.presentation.ResetPassFragment2">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="234dp"
        android:layout_marginTop="110dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="122dp"
        android:layout_height="153dp"
        android:layout_marginBottom="-60dp"
        android:elevation="20dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_map_right"
        app:layout_constraintBottom_toTopOf="@id/content_card"
        app:layout_constraintStart_toStartOf="@id/content_card" />

    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="186dp"
        app:cardBackgroundColor="@color/cardViewBackground"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="54dp"
                android:layout_marginTop="55dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_reset_key"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/reset_password_text"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/enter_code_to_reset_text"
                android:textAppearance="?textAppearanceTitleSmall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <EditText
                    android:id="@+id/digit1"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/digit2"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/digit3"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/digit4"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:drawableTintMode="add"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textSize="20sp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/continue_btn"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_continue_icon"
        android:paddingHorizontal="66dp"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="@id/content_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_card" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_plane_mans_hand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>