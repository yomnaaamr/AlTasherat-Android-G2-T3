<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_language_screen_bg"
    tools:context=".features.language_country.presentation.LanguageFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="234dp"
        android:layout_marginTop="109dp"
        android:src="@drawable/ic_star_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="186dp"
        app:cardBackgroundColor="#87FFFFFF"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/first_trailing"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="@color/md_theme_primary"
                app:layout_constraintBottom_toBottomOf="@id/choose_language_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/choose_language_txt" />

            <TextView
                android:id="@+id/choose_language_txt"
                style="@style/TextAppearance.AlTasherat.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:text="Please Choose Language"
                app:layout_constraintStart_toEndOf="@id/first_trailing"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/language_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/choose_language_txt" />

            <View
                android:id="@+id/seprator_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6547464F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/language_recycler" />

            <View
                android:id="@+id/second_trailing"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="@color/md_theme_primary"
                app:layout_constraintBottom_toBottomOf="@id/choose_country_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/choose_country_txt" />

            <TextView
                android:id="@+id/choose_country_txt"
                style="@style/TextAppearance.AlTasherat.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:text="Please Choose Country"
                app:layout_constraintStart_toEndOf="@id/second_trailing"
                app:layout_constraintTop_toBottomOf="@id/seprator_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/choose_country_card"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardStrokeColor="@color/md_theme_secondary"
                app:cardStrokeWidth="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/choose_country_txt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/country_flag"
                        style="@style/TextAppearance.AlTasherat.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="0.2"
                        tools:text="ðŸ‡¸ðŸ‡¦" />

                    <TextView
                        android:id="@+id/country_name"
                        style="@style/TextAppearance.AlTasherat.TitleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:paddingHorizontal="8dp"
                        android:textAlignment="viewStart"
                        tools:text="Egypt" />

                    <ImageButton
                        android:id="@+id/arrow_down"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.2"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/helper_txt"
                style="@style/TextAppearance.AlTasherat.TitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9"
                tools:text="You can change your country or language any time from menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-40dp"
        android:elevation="20dp"
        android:src="@drawable/ic_map"
        app:layout_constraintBottom_toTopOf="@id/content_card"
        app:layout_constraintEnd_toEndOf="@id/content_card"
        app:layout_constraintHorizontal_bias="0.880"
        app:layout_constraintStart_toStartOf="@id/content_card" />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_bg"
        android:drawableEnd="@drawable/ic_continue_icon"
        android:drawablePadding="10dp"
        android:paddingHorizontal="54dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="@id/content_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_card" />

</androidx.constraintlayout.widget.ConstraintLayout>