<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".features.home.menu.verify_email.VerifiedEmailFragment">

    <ImageView
        android:id="@+id/email_verified_icon"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/ic_email_verified"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/email_verification_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/tajawal_bold"
        android:text="@string/email_verification"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/hand_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_verified_icon" />

    <ImageView
        android:id="@+id/hand_icon"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/ic_hand"
        app:layout_constraintBottom_toBottomOf="@id/email_verification_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/email_verification_txt"
        app:layout_constraintTop_toTopOf="@id/email_verification_txt" />

    <TextView
        android:id="@+id/verification_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/tajawal_medium"
        android:gravity="center_horizontal"
        android:lineHeight="24dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_verification_txt"
        android:text="أرسلنا رسالة تأكيد بالبريد الإلكتروني إلى: \nemail@gmail.com\nتحقق من بريدك الإلكتروني وانقر على رابط التأكيد للمتابعة" />

    <Button
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/skip_txt"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>