<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.home.visa_requests.presentation.RequestsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="16dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_offer_visa"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    app:closeIconEnabled="false"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"
                    app:checkedIconVisible="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceTitleMedium"
                    android:checked="true"
                    android:text="@string/chip_text_one"
                    app:chipIcon="@drawable/ic_chip_one" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_employment_visa"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    app:closeIconEnabled="false"
                    app:checkedIconVisible="false"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceTitleMedium"
                    android:checked="false"
                    app:chipIconTint="@android:color/darker_gray"
                    android:text="@string/chip_text_two"
                    app:chipIcon="@drawable/ic_chip_two" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tourist_visa"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    app:closeIconEnabled="false"
                    app:checkedIconVisible="false"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"
                    app:chipIconTint="@android:color/darker_gray"
                    android:textAppearance="?textAppearanceTitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/chip_text_three"
                    app:chipIcon="@drawable/ic_chip_three" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>


        <!--        <ImageButton-->
        <!--            android:id="@+id/back_button"-->
        <!--            android:layout_width="32dp"-->
        <!--            android:layout_height="32dp"-->
        <!--            android:src="@drawable/ic_arrow_back"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="12dp"-->
        <!--            android:text="@string/requests"-->
        <!--            android:textAppearance="?textAppearanceTitleMedium"-->
        <!--            android:textStyle="bold"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/back_button"-->
        <!--            app:layout_constraintStart_toEndOf="@+id/back_button"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/back_button" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/visa_request_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:listitem="@layout/item_visa_request" />


</androidx.constraintlayout.widget.ConstraintLayout>