<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mahmoud.altasherat.features.splash.presentation.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment2"
            app:destination="@id/onBoardingFragment2"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/languageFragment"
        android:name="com.mahmoud.altasherat.features.onBoarding.presentation.fragments.LanguageFragment"
        android:label="fragment_language"
        tools:layout="@layout/fragment_language">
        <action
            android:id="@+id/action_languageFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/languageFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.mahmoud.altasherat.features.authentication.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_authFragment_to_menuNavigation"
            app:destination="@id/menuNavigation" />
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment2"
        android:name="com.mahmoud.altasherat.features.onBoarding.presentation.fragments.OnBoardingFragment"
        android:label="OnBoardingFragment">
        <action
            android:id="@+id/action_onBoardingFragment2_to_languageFragment"
            app:destination="@id/languageFragment"
            app:popUpTo="@id/onBoardingFragment2"
            app:popUpToInclusive="true" />
    </fragment>
    <include app:graph="@navigation/home_nav_graph" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mahmoud.altasherat.features.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_home_nav_graph"
            app:destination="@id/home_nav_graph" />
    </fragment>
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_menuNavigation"
            app:destination="@id/menuNavigation" />
    </fragment>
    <navigation android:id="@+id/menuNavigation"
        app:startDestination="@id/menuFragment">
        <fragment
            android:id="@+id/menuFragment"
            android:name="com.mahmoud.altasherat.features.menu.presentation.MenuFragment"
            android:label="MenuFragment" />
        <fragment
            android:id="@+id/changePasswordFragment"
            android:name="com.mahmoud.altasherat.ChangePasswordFragment"
            android:label="fragment_change_password"
            tools:layout="@layout/fragment_change_password" />
        <fragment
            android:id="@+id/aboutUsFragment"
            android:name="com.mahmoud.altasherat.AboutUsFragment"
            android:label="fragment_about_us"
            tools:layout="@layout/fragment_about_us" />
        <fragment
            android:id="@+id/changeLanguageFragment"
            android:name="com.mahmoud.altasherat.ChangeLanguageFragment"
            android:label="fragment_change_language"
            tools:layout="@layout/fragment_change_language" />
        <fragment
            android:id="@+id/contactUsFragment"
            android:name="com.mahmoud.altasherat.ContactUsFragment"
            android:label="fragment_contact_us"
            tools:layout="@layout/fragment_contact_us" />
        <fragment
            android:id="@+id/privacyPolicyFragment"
            android:name="com.mahmoud.altasherat.PrivacyPolicyFragment"
            android:label="fragment_privacy_policy"
            tools:layout="@layout/fragment_privacy_policy" />
        <fragment
            android:id="@+id/termsAndConditionsFragment"
            android:name="com.mahmoud.altasherat.TermsAndConditionsFragment"
            android:label="fragment_terms_and_conditions"
            tools:layout="@layout/fragment_terms_and_conditions" />
    </navigation>
</navigation>